pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Your build steps here
                sh 'echo "Building..."'
            }
        }
    }

    post {
        always {
            // Send email notification
            emailext (
                subject: "Build ${currentBuild.result}: ${env.JOB_NAME}",
                body: "Build ${currentBuild.result} for ${env.JOB_NAME}.\n\nCheck console output at: ${env.BUILD_URL}",
                to: 'kthangaraju@yahoo.com',
                replyTo: 'your_email@example.com',
            )
        }
    }
}