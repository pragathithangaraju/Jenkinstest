pipeline {
    agent any
    
    stages {
        stage('Fetch Branch and Complete Process') {
            steps {
                echo 'Running first pipeline'
            }
        }
    }
}

pipeline {
    agent any
    
    triggers {
        cron('H H * * 2') // This triggers the pipeline every Tuesday
    }
    
    stages {
        stage('Send Email and Complete Process') {
            steps {
               echo 'Running second pipeline'
            }
        }
    }
}